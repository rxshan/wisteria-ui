{
  "private": true,
  "type": "module",
  "version": "0.0.1",
  "packageManager": "^pnpm@8.1.1",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "cz": "npx git-cz",
    "format": "npx prettier --write --cache .",
    "stub": "pnpm run -r --parallel --filter=./packages/* stub",
    "build": "pnpm run -r --filter=./packages/* build",
    "docs:dev": "pnpm run --filter @wisteria-ui/docs docs:dev",
    "docs:build": "pnpm run --filter @wisteria-ui/docs docs:build",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "npx husky install & pnpm stub"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "lint-staged": {
    "*.json": "prettier --write",
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss}": [
      "stylelint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "@commitlint/cz-commitlint": "^17.6.7",
    "@wisteria-ui/eslint-config": "workspace:*",
    "@wisteria-ui/stylelint-config": "workspace:*",
    "commitizen": "^4.3.0",
    "eslint": "^8.45.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "only-allow": "^1.1.1",
    "postcss-scss": "^4.0.6",
    "prettier": "^3.0.0",
    "stylelint": "^15.10.2",
    "typescript": "^5.1.6",
    "unbuild": "^1.2.1"
  }
}
