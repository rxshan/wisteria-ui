{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "esnext",
    "target": "es2015",
    "lib": ["esnext", "dom"],
    "strict": true,
    "allowJs": false,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "verbatimModuleSyntax": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["**/dist/**", "**/node_modules/**"]
}
